    "compilerOptions": {
        "target": "ES2023",
        "module": "CommonJS",

        "lib": ["ES2023", "Decorators", "DOM", "WebWorker", "ScriptHost"],
    
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "./out",
        "rootDir": "./js_only",
    }
}
